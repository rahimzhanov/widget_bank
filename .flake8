[flake8]
# Максимальная длина строки (по PEP 8 — 79, но можно 88/100)
max-line-length = 88

# Игнорируемые ошибки и предупреждения
ignore =
    E203,  # Пробел перед ':' (иногда конфликтует с Black)
    W503,  # Перенос строки перед бинарным оператором
    E501,  # Длина строки (уже управляется max-line-length)

# Исключаемые файлы и директории
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    tests

# Дополнительные параметры
per-file-ignores =
    # Игнорировать F401 (неиспользуемый импорт) в __init__.py
    __init__.py:F401